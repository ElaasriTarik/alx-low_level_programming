CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
EMACS_TEMP= *~ \#*\# *.swp
VIM_TEMP = *.swp *.swo

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(EMACS_TEMP) $(VIM_TEMP)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(NAME) $(OBJ)$(EMACS_TEMP) $(VIM_TEMP)

re:
	oclean all
